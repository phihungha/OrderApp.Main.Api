{
  "request": {
    "method": "POST",
    "url": "/payments",
    "bodyPatterns": [
      { "matchesJsonPath": "$[?(@.cardNumber == '4111111111111111')]" },
      { "matchesJsonPath": "$[?(@.cardHolderName == 'HA PHI HUNG')]" },
      { "matchesJsonPath": "$[?(@.cardExpiry == '12/27')]" },
      { "matchesJsonPath": "$[?(@.cardCvv == '123')]" },
      { "matchesJsonPath": "$.amount" }
    ]
  },
  "response": {
    "status": 200,
    "headers": {
      "Content-Type": "application/json"
    },
    "bodyFileName": "visa/pay-succeeds.json"
  }
}
